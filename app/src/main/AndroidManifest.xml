<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mx.x10.reverseeffectapps.assignmentams">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:fullBackupContent="true">
        <activity
            android:name=".mvc.view.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".mvc.view.AddClassActivity"
            android:label="@string/title_activity_add_class"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".mvc.view.AddReminderActivity"
            android:label="@string/title_activity_add_reminder"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".mvc.view.ViewAssignmentsActivity"
            android:label="@string/title_activity_view_assignments"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".mvc.view.AddAssignmentActivity"
            android:label="@string/title_activity_add_assignment"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>