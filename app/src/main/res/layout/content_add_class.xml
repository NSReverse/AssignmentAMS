<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="mx.x10.reverseeffectapps.assignmentams.mvc.view.AddClassActivity"
    tools:showIn="@layout/activity_add_class"
    android:padding="15dp">

    <TextView
        android:id="@+id/text_view_add_class_label_0"
        android:text="Class ID #"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edit_text_add_class_id"
        android:layout_below="@id/text_view_add_class_label_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_view_add_class_label_1"
        android:text="Class Name"
        android:layout_below="@id/edit_text_add_class_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edit_text_add_class_name"
        android:layout_below="@id/text_view_add_class_label_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_view_add_class_label_2"
        android:text="Class Dates"
        android:layout_below="@id/edit_text_add_class_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edit_text_add_class_dates"
        android:layout_below="@id/text_view_add_class_label_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_view_add_class_label_3"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_view_add_class_label_4"
        android:text="Class Instructor"
        android:layout_below="@id/edit_text_add_class_dates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edit_text_add_class_instructor"
        android:layout_below="@id/text_view_add_class_label_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
